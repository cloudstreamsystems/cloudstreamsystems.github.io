modules = ["web", "ruby-3.2"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35729
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Jekyll Server"

[[workflows.workflow]]
name = "Jekyll Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "jekyll serve --host=0.0.0.0 --port=5000 --livereload --incremental --force_polling"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["jekyll", "serve", "--host=0.0.0.0", "--port=5000"]
build = ["jekyll", "build"]
